<div class="mt-3 text-center">
  <h1>Login</h1>
</div>
<!-- LOGIN FORM -->
<form
  class="loginFormHH login-form d-flex flex-column justify-content-center align-items-center"
  style="width: 50vw"
>
  <!-- Email input -->
  <div class="form-group mt-3" style="width: 35vw">
    <input
      type="email"
      class="form-control"
      id="email-login"
      aria-describedby="emailHelp"
      placeholder="email"
    />
  </div>
  <!-- password input -->
  <div class="form-group mt-3" style="width: 35vw">
    <input
      type="password"
      class="form-control"
      id="password-login"
      placeholder="password"
    />
  </div>
  <div class="d-flex justify-content-between align-items-center mt-1">
    <button
      type="submit"
      class="btn btn-primary m-2 inputBtn"
      style="width: 10vw"
    >
      Login
    </button>
    <p class="mt-3 text-small createBtn"><a href="">or create an account</a></p>
  </div>
</form>

<script src="/js/login.js"></script>