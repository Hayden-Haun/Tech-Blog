<!-- CREATE HEADER HEADER -->
<div class="mt-3 text-center">
  <h1>Create an Account</h1>
</div>
<!-- LOGIN FORM -->
<form
  class="loginFormHH d-flex flex-column justify-content-center align-items-center"
  style="width: 50vw"
>
  <!-- UserName input -->
  <div class="form-group mt-3" style="width: 35vw">
    <input
      type="text"
      class="form-control"
      id="usernameInputEmail1"
      aria-describedby="usernameHelp"
      placeholder="user-name"
    />
  </div>
  <!-- Email input -->
  <div class="form-group mt-3" style="width: 35vw">
    <input
      type="email"
      class="form-control"
      id="exampleInputEmail1"
      aria-describedby="emailHelp"
      placeholder="email"
    />
  </div>
  <!-- password input -->
  <div class="form-group mt-3" style="width: 35vw">
    <input
      type="password"
      class="form-control"
      id="exampleInputPassword1"
      placeholder="password"
    />
  </div>
  <div class="d-flex justify-content-between align-items-center mt-1">
    <button type="submit" class="btn btn-primary m-2" style="width: 10vw">
      Create Account
    </button>
    <p class="mt-3 text-small"><a href="#">or click here to login</a></p>
  </div>
</form>