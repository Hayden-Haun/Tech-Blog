{{! GET EACH POST and DISPLAY to the page }}
<div class="mt-3 text-center">
  <h1>Tech Blog!</h1>
</div>

{{#each posts as |post|}}
  <div
    class="card m-2 d-flex flex-column justify-content-center align-items-center"
    style="width: 50vw"
  >
    <div class="card-header bg-info text-center" style="width: 50vw"><strong
      >{{post.post_title}}</strong></div>
    <div
      class="card-body bg-muted d-flex flex-column justify-content-center align-items-center"
      style="width: 48vw"
    >
      <p class="card-text" style="text-align:left">
        {{post.post_text}}
      </p>
      <a
        href=""
        class="btn btn-dark viewCommentsButton"
        id="{{post.post_id}}"
      >Comments</a>
    </div>
  </div>

{{/each}}

<script src="/js/postPage.js"></script>

